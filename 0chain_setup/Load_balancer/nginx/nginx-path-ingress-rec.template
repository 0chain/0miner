apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  name: expose-ext-svc-rec
  namespace:  ${cluster}
  annotations:
    kubernetes.io/ingress.class: "nginx-ingress-nginx"
    nginx.ingress.kubernetes.io/rewrite-target: /$2
spec:
  rules:
  - host: ${host_address}
    http:
      paths:
      - path: /recorder(|$)(.*)
        backend:
          serviceName: recorder
          servicePort: 80
      - path: /dns(/|$)(.*)
        backend:
          serviceName: worker
          servicePort: 80
      - path: /proxy(/|$)(.*)
        backend:
          serviceName: zproxy
          servicePort: 31082